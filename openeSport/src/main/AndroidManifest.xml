<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ar.oe"
    android:versionCode="36"
    android:versionName="2.26" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:icon="@drawable/oe_logo"
        android:label="@string/app_name"
        android:logo="@drawable/oe_action_bar"
        android:theme="@style/Theme.openesport"
        android:debuggable="true"
        >

        <activity
            android:name=".activities.ActivityHome"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ActivityArticle"
            android:label="@string/app_name" />

        <activity
            android:name=".activities.ActivityRanking"
            android:label="@string/app_name" />

        <activity
            android:name=".activities.ActivityPreferences"
            android:label="@string/app_name" />

    </application>

</manifest>