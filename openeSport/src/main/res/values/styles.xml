<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.openesport" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_openesport</item>
        <item name="popupMenuStyle">@style/openesport_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/openesport_DropDownListView</item>
        <item name="actionBarTabStyle">@style/openesport_ActionBarTabStyle</item>
        <item name="actionDropDownStyle">@style/openesport_DropDownNav</item>
        <item name="actionBarStyle">@style/openesport_solid_ActionBar</item>

        <item name="android:selectableItemBackground">@drawable/selectable_background_openesport</item>
        <item name="android:popupMenuStyle">@style/openesport_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/openesport_DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/openesport_ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/openesport_DropDownNav</item>
        <item name="android:actionBarStyle">@style/openesport_solid_ActionBar</item>
        <!--<item name="activatedBackgroundIndicator">@drawable/drawer_layout_background</item>-->
        <!--<item name="android:activatedBackgroundIndicator">@drawable/drawer_layout_background</item>-->
    </style>

    <!--<style name="activatedBackgroundIndicator">-->
    <!--<item name="android:background">?android:attr/activatedBackgroundIndicator</item>-->
    <!--</style>-->


    <style name="openesport_solid_ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_openesport</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_openesport</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_openesport</item>

        <item name="android:background">@drawable/ab_solid_openesport</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_openesport</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_openesport</item>

        <item name="titleTextStyle">@style/NoTitleText</item>
        <item name="android:titleTextStyle">@style/NoTitleText</item>
        <item name="subtitleTextStyle">@style/NoTitleText</item>
        <item name="android:subtitleTextStyle">@style/NoTitleText</item>
    </style>

    <style name="openesport_transparent_ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/orange_light</item>

        <item name="android:background">@color/orange_light</item>
    </style>

    <style name="openesport_PopupMenu" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_openesport</item>
    </style>

    <style name="openesport_DropDownListView" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_openesport</item>
    </style>

    <style name="openesport_ActionBarTabStyle" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="background">@drawable/tab_indicator_ab_openesport</item>

        <item name="android:background">@drawable/tab_indicator_ab_openesport</item>
    </style>

    <style name="openesport_DropDownNav" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="background">@drawable/spinner_background_ab_openesport</item>

        <item name="android:background">@drawable/spinner_background_ab_openesport</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_openesport</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_openesport</item>
    </style>

    <style name="buttonMenu" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="buttonMenuSelected" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NoTitleText">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="GridViewArticles">
        <item name="android:numColumns">1</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="SwipeLayout">
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
    </style>

</resources>